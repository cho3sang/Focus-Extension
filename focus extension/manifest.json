{
    "manifest_version": 3,
    "name": "Focus Blocker",
    "version": "1.0",
    "description": "Blocks distracting websites to help you focus.",
    "permissions": [
      "declarativeNetRequest",
      "storage"
    ],
    "host_permissions": [
      "*://*.netflix.com/*",
      "*://*.tiktok.com/*",
      "*://*.youtube.com/*"
    ],
    "declarative_net_request": {
      "rule_resources": [
        {
          "id": "block_rules",
          "enabled": true,
          "path": "rules.json"
        }
      ]
    }
  }
  